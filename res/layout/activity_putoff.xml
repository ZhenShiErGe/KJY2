<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	

	
	
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:scrollbars="none">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			 <TextView
					android:id="@+id/txt_putoffcustomer"
					style="@style/TxtTitle"
					android:textSize="16sp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="45dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:layout_marginTop="22dp"
					android:text="@string/putoffcustomer" />
 
	 
			
			<TextView
					style="@style/TxtTitle"
					android:textSize="16sp"
				android:layout_marginTop="25dp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="45dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:text="@string/putoffNum" />
			
			<EditText
				android:id="@+id/et_putoffnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:numeric="integer"
                android:background="@drawable/edittext_login"
                android:paddingLeft="90dp"
                android:singleLine="true"
                android:maxLength="11"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />
			
			<View
				android:background="@color/black2"
				android:layout_width="fill_parent"
				android:layout_height="1.0dip" />
			
			
			 
			
			<TextView
					style="@style/TxtTitle"
					android:textSize="16sp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="45dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:text="@string/putonNum" />
			   <EditText
					android:id="@+id/et_putonnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:numeric="integer"
                android:background="@drawable/edittext_login"
                android:paddingLeft="90dp"
                android:singleLine="true"
                android:maxLength="11"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />
			   
			<View
				android:background="@color/black2"
				android:layout_width="fill_parent"
				android:layout_height="1.0dip" />
			
			<TextView
					style="@style/TxtTitle"
					android:textSize="16sp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="45dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:text="@string/settletype" />
					
			<RadioGroup android:id="@+id/rg_settletype"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:paddingLeft="16dp"
				android:paddingRight="10dp"
			    android:orientation="horizontal"
			    android:checkedButton="@+id/money">
			    <RadioButton android:id="@+id/rb_money"
			        android:text="@string/money"/>
			    <RadioButton android:id="@+id/rb_debt"
			        android:text="@string/debt"/>
			</RadioGroup>
			  
			<LinearLayout
				android:gravity="center"
				android:padding="20.0dip"
				android:layout_width="fill_parent"
				android:layout_height="80.0dip">
				 
				 <Button
	              android:id="@+id/btnsendmess"
	              android:textColor="@color/white"
	              android:layout_width="fill_parent"
	              android:layout_height="45dp"
	              android:background="@drawable/btn_bg_green"
	              android:padding="10.0dip"
	              android:text="@string/sendMess"
	              />
				
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>