<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	

	
	
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:scrollbars="none">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			 <TextView
					android:id="@+id/txt_userinfo"
					style="@style/TxtTitle"
					android:textSize="16sp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="45dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:layout_marginTop="22dp"
					android:drawableRight="@drawable/right"
					android:text="@string/userinfo" />
 
	 
			
			<TextView
					android:id="@+id/txt_updatepsw"
					style="@style/TxtTitle"
					android:textSize="16sp"
				android:layout_marginTop="25dp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="45dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:drawableRight="@drawable/right"
					android:text="@string/updatepsw" />
			<View
				android:background="@color/black2"
				android:layout_width="fill_parent"
				android:layout_height="1.0dip" />
			
			
			 
			
			<TextView
					android:id="@+id/txt_printerset"
					style="@style/TxtTitle"
					android:textSize="16sp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="45dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:drawableRight="@drawable/right"
					android:text="@string/printerset" />
			<View
				android:background="@color/black2"
				android:layout_width="fill_parent"
				android:layout_height="1.0dip" />
			
			<TextView
					android:id="@+id/txt_updateversion"
					style="@style/TxtTitle"
					android:textSize="16sp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="45dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:drawableRight="@drawable/right"
					android:text="@string/updateversion" />
			<!-- 
			<View
				android:background="@color/black2"
				android:layout_width="fill_parent"
				android:layout_height="1.0dip" />
			 -->
			<TextView
					android:id="@+id/txt_aboutus"
					style="@style/TxtTitle"
					android:textSize="16sp"
				android:layout_marginTop="25dp"
					android:gravity="center_vertical"
					android:background="@drawable/setting_item_selector"
					android:layout_width="fill_parent"
					android:layout_height="45dp"
					android:paddingLeft="16dp"
					android:paddingRight="10dp"
					android:drawableRight="@drawable/right"
					android:text="@string/aboutus" />
<!-- 			<View
				android:background="@color/black2"
				android:layout_width="fill_parent"
				android:layout_height="1.0dip" />
			  -->
			  
			<LinearLayout
				android:gravity="center"
				android:padding="20.0dip"
				android:layout_width="fill_parent"
				android:layout_height="80.0dip">
<!-- 				<Button
					android:textColor="@color/white"
					android:id="@+id/btnexit"
					android:background="@drawable/btn_bg_red2"
					android:padding="10.0dip"
					android:layout_width="fill_parent"
					android:layout_height="40.0dip"
					android:text="@string/logout" />
				 -->
				 
				 <Button
	              android:id="@+id/btnexit"
	              android:textColor="@color/white"
	              android:layout_width="fill_parent"
	              android:layout_height="45dp"
	              android:background="@drawable/btn_bg_green"
	              android:padding="10.0dip"
	              android:text="@string/logout"
	              />
				
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>