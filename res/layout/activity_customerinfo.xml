<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include  android:id="@+id/layout_bar" layout="@layout/customerinfo_title"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_weight="0.06"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_storename"
            style="@style/TxtTitle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/setting_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:text="@string/storeName"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/black2" />
		   
        
        <TextView
            android:id="@+id/txt_storeboss"
            style="@style/TxtTitle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/setting_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:text="@string/storeBoss"
            android:textSize="16sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/black2" />

        
        <TextView
            android:id="@+id/txt_storeProduct"
            style="@style/TxtTitle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/setting_item_selector"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:text="@string/production"
            android:textSize="16sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/black2" />
        
        
         <TextView
            android:id="@+id/txt_unitprice"
            style="@style/TxtTitle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/setting_item_selector"
        
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:text="@string/unitPrice"
            android:textSize="16sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/black2" />
        
        
          <TextView
            android:id="@+id/txt_storeaddress"
            style="@style/TxtTitle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/setting_item_selector"
        
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:text="@string/storeAddress"
            android:textSize="16sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/black2" />
        
        
      
          
         <LinearLayout
				android:gravity="center"
				android:padding="20.0dip"
				android:layout_width="fill_parent"
				android:layout_height="80.0dip">
				
	          <Button
	              android:id="@+id/btn_callstore"
	              android:textColor="@color/white"
	              android:layout_width="fill_parent"
	              android:layout_height="45dp"
	              android:background="@drawable/btn_bg_green"
	            android:padding="10.0dip"
	              android:text="@string/callStorePhone"
	              />
		</LinearLayout>
    </LinearLayout>

</LinearLayout>




  